  </div>
  <div class="editform">
    <%= form.label :dimensions, 'Dimensions (2D/3D)', :class => 'col-form-label' %>
    <%= form.text_field 'dimensions', :class => 'form-control' %>
  </div>
  <div class="editform">
    <%= form.label :sound, 'Does this game have sound? (Y/N)', :class => 'col-form-label' %>
